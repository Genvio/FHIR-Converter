{
    "fullUrl":"urn:uuid:{{ ID }}",
    "resource":{
        "resourceType": "Organization",
        "id":"{{ ID }}",
        "identifier":
        [
            {% assign ids = org.id | to_array -%}
            {% for id in ids -%}
            { {% include 'DataType/Identifier' Identifier: id -%} },
            {% endfor -%}
        ],
        "name":"{{ org.name._ }}",
        "address":
        [
            {% assign addrs = org.addr | to_array -%}
            {% for addr in addrs -%}
            { {% include 'DataType/Address' Address: addr -%} },
            {% endfor -%}
        ],
        "telecom":
        [
            {% assign telecoms = org.telecom | to_array -%}
            {% for telecom in telecoms -%}
            { {% include 'DataType/ContactPoint' ContactPoint: telecom -%} },
            {% endfor -%}
        ],
    },
    "request":{
        "method":"PUT",
        "url":"Organization/{{ ID }}",
    },
},
