{
    "fullUrl":"urn:uuid:{{ ID }}",
    "resource":{
        "resourceType": "DocumentReference",
        "id":"{{ ID }}",
        "type":
        {
            {% assign codes = docref.ClinicalDocument.code | to_array -%}
            {% include 'DataType/CodeableConcept' CodeableConcept: codes.first -%}
        },
        "date":"{{ "" | now }}",
        "status":"current",
        "content":
        [
            {
                "attachment":
                {
                    "contentType":"text/plain",
                    "data":"{{ docref._originalData | gzip }}",
                    "hash":"{{ docref._originalData | gzip | sha1_hash | base64_encode }}",
                },
            },
        ],
    },
    "request":{
        "method":"PUT",
        "url":"DocumentReference/{{ ID }}",
    },
},
